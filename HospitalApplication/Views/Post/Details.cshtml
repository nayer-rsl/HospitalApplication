@model HospitalApplication.Models.ViewModels.DetailsPost
@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="list-group">
            <div class="list-group-item">
                <h2 class="list-group-item-heading text-center">Post Details</h2>
                <div class="list-group-item-text">
                    <div class="row">
                        <div class="col-sm-4">Title</div>
                        <div class="col-sm-8">@Model.SelectedPost.Title</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">UserID</div>
                        <div class="col-sm-8">@Model.SelectedPost.UserID</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">Published On</div>
                        <div class="col-sm-8">@Model.SelectedPost.DateCreated.ToString("MMM dd, yyyy")</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">Content</div>
                        <div class="col-sm-8">@Model.SelectedPost.Content</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center">
    <a class="btn btn-info" href="/Post/Edit/@Model.SelectedPost.PostID" role="button">Update</a>
    <a class="btn btn-danger" href="/Post/DeleteConfirm/@Model.SelectedPost.PostID" role="button">Delete</a>
</div>

<div class="col-md-12 text-center">
    <a class="primary-light" href="/Post/List">Back to list</a>
</div>