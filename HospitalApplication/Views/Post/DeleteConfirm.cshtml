@model HospitalApplication.Models.PostDto

@{
    ViewBag.Title = "Confirm Delete";
}

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <h2>Are you sure you want to delete this post?</h2>
        <div class="list-group">
            <div class="list-group-item text-center">
                <h3 class="list-group-item-heading text-center">@Model.DateCreated.ToString("MMM dd, yyyy") - @Model.Title</h3>
                <p class="list-group-item-text">@Model.Content</p>
            </div>
        </div>
        <div class="text-center">
            <form action="/Post/Delete/@Model.PostID" method="POST">
                <button class="btn btn-danger" type="submit">Confirm Delete</button>
                <a class="btn btn-default" href="/Post/List" role="button">Cancel</a>
            </form>
        </div>
    </div>
</div>